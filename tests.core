    filesets : [hello_files, svreal_files]
    toplevel : [top]
  simple:
    filesets : [simple_files, svreal_files]
    toplevel : [top]
    tools:
      icarus:
        iverilog_options : [-g2012]
  module:
    filesets : [module_files, svreal_files]
    toplevel : [top]
    tools:
      icarus:
        iverilog_options : [-g2012]
  array:
    filesets : [array_files, svreal_files]
    toplevel : [top]
    tools:
      icarus:
        iverilog_options : [-g2012]
  conversions:
    filesets : [conversions_files, svreal_files]
    toplevel : [top]
    tools:
      icarus:
        iverilog_options : [-g2012]