CAPI=2:
name : ::tests:0

filesets:
  svreal_files:
    files:
      - include/real.sv : {is_include_file: true}
      - include/math.sv : {is_include_file: true}
      - src/add_real.sv
      - src/assertion_real.sv
      - src/assign_real.sv
      - src/comp_real.sv
      - src/ite_real.sv
      - src/mul_real.sv
    file_type: verilogSource
  hello_files:
    files:
      - tests/hello.sv : {file_type : verilogSource}
  simple_files:
    files:
      - tests/simple.sv : {file_type : verilogSource}
  array_files:
    files:
      - tests/array.sv : {file_type : verilogSource}
  conversions_files:
    files:
      - tests/conversions.sv : {file_type : verilogSource}
  module_files:
    files:
      - tests/module.sv : {file_type : verilogSource}

